  <!-- Advanced Search -->
  <fieldset>
    <legend>Search<stl:block stl:if="search_name">: ${search_title}</stl:block>
    </legend>
    <form action=";view" method="get">
      <table>
        <tr>
          <td colspan="2">
            <label for="text">Text (search within the title and all comments)
            </label>
            <br/>
            <input type="text" name="text" id="text" size="30" value="${text}"
              class="tracker-select" />
          </td>
          <td colspan="1">
            <label for="mtime">Modified since:</label><br/>
            <input type="text" name="mtime" id="mtime" size="2"
              value="${mtime}" /> days ago
          </td>
        </tr>
        <tr>
          <td valign="top">
            <label for="product">Product: (<a
                href="./product/;view">more ...</a>)</label>
            <br/>
            <select name="product" id="product" class="tracker-select"
              multiple="multiple" size="4">
              <option stl:repeat="item products" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
          <td valign="top">
            <label for="module">Module: (<a
                href="./module/;view">more ...</a>)</label>
            <br/>
            <select name="module" id="module" class="tracker-select"
              multiple="multiple" size="4">
              <option stl:repeat="item modules" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
          <td valign="top">
            <label for="version">Version: (<a
                href="./version/;view">more ...</a>)</label>
            <br/>
            <select name="version" id="version" class="tracker-select"
              multiple="multiple" size="4">
              <option stl:repeat="item versions" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
        </tr>
        <tr>
          <td valign="top">
            <label for="type">Type: (<a
                href="./type/;view">more ...</a>)</label>
            <br/>
            <select name="type" id="type" class="tracker-select"
              multiple="multiple" size="4">
              <option stl:repeat="item types" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
          <td valign="top">
            <label for="state">Status: (<a
                href="./state/;view">more ...</a>)</label>
            <br/>
            <select name="state" id="state" class="tracker-select"
              multiple="multiple" size="4">
              <option stl:repeat="item states" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
          <td valign="top">
            <label for="priority">Priority: (<a
                href="./priority/;view">more ...</a>)</label>
            <br/>
            <select name="priority" id="priority" class="tracker-select"
              multiple="multiple" size="4">
              <option stl:repeat="item priorities" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
        </tr>
        <tr>
          <td valign="top" colspan="3">
            <label for="assigned-to">Assigned To:<stl:inline stl:if="is_admin">
            (<a href="${manage_assigned}">edit</a>)</stl:inline></label>
            <br/>
            <select name="assigned_to" id="assigned-to"
              class="tracker-select" multiple="multiple" size="4">
              <option stl:repeat="item assigned_to" value="${item/name}"
                selected="${item/selected}">${item/value}</option>
            </select>
          </td>
        </tr>
      </table>
      <br/>
      <button type="submit" name="action" value="view" class="button-search"
        >Search</button>
    </form>
  </fieldset>

</stl:block>
